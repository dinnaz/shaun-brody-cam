package hireVehicle;

/**
 *
 * @author GearsOfWraith696
 */
public class PerDayRental {
     

       private String perdayrental;
    
public PerDayRental()
{
    perdayrental = "No kilometers travelled yet.";
}
public PerDayRental(String rental)
{
    perdayrental = rental;
}
public void printPerDayRental()
{
    System.out.println("Total Price cost: " + perdayrental); 
}

}
    


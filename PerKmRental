package hireVehicle;

/**
 *
 * @author GearsOfWraith696
 */
public class PerKmRental {
       private String perkmrental;
    
public PerKmRental()
{
    perkmrental = "No kilometers travelled yet.";
}
public PerKmRental(String rental)
{
    perkmrental = rental;
}
public void printPerKmRental()
{
    System.out.println("Total Price cost: " + perkmrental); 
}

}

    
    

